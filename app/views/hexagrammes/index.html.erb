<div class="wrapper">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <div class="maintitle open-font">
          <h4>LES HEXAGRAMMES</h4>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <div class="hex-list">
              <% @hexagrammes.each do |hex| %>
    <%= link_to hexagramme_path(hex) do %>
          <div class="hex-img">
            <%= image_tag "#{hex.numero}.jpg" %>
      <%= hex.nom %>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
